<div class="card bg-success d-inline-block text-wrap h-100 mx-1 memo-card"data-model_name="<%= Memo.model_name.singular %>"data-id="<%= memo.id %>">
    <div class="d-flex flex-column h-100" style="width: 25rem; min-width: 25rem;">
        <div class="font-weight-bold bg-success px-4 py-2 memo-header">
            <div class="pr-5 text-white"><%= memo.title %></div>
                <div class="text-right position-absolute" style="top: 4px; right: 4px">
                    <%# remote: true から local: trueに変更したことでdropdown-menuの操作が可能になった %>
                    <%# 改めてリスト内の新規投稿を作ろうとしたがerrorになったので remote: true へ変更した %>
                    <%# remoteオプション→form_for,form_tagに使用されるオプション localオプション→form_with %>
                    <%# Railsのver.違いで使い分けをすること %>
                    <%= link_to(new_memo_todo_path(memo), title: "New TODO", class: "btn px-0 text-white", remote: true) do %>
                        <i class="fas fa-plus align-middle"></i>
                    <% end %>
                    <div class="btn-group ">
                        <button type="button" class="btn text-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v align-middle"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right text-middle">
                            <%= link_to "編集", edit_memo_path(memo), class: "dropdown-item text-success", remote: true %>
                            <%= link_to "削除", memo, method: :delete, class: "dropdown-item text-danger", remote: true, data: { confirm: 'Are you sure?' } %>
                        </div>
                    </div>
                </div>
        </div>
            <div class="card-body px-2 pb-2 pt-0 overflow-auto todo-cards">
                <%= render partial: "todos/todo", collection: memo.todos, as: :todo %>
            </div>
    </div>
</div>
