<br>
<p class="title">アカウント作成</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
<%# サインアップ時に画像を入力できるようにフォームを追加 %>
  <div class="field">
    <%= f.label "ユーザー画像" %><br />
    <%= f.file_field :image, autofocus: true %>
  </div>

    <!--サインアップ時に名前を入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :user_name, autofocus: true %>
  </div>
<!--サインアップ時にメールアドレスを入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :再度パスワード入力して下さい %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "アカウント作成", class: "btn btn-outline-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>