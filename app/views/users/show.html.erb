<h3>プロフィール</h3>
<br>

<h5>ユーザー画像が入る</h5>

        <div class="box">
                <h4><%= @user.user_name %></h4>

                    <p><%= @user.email %></p>

                <h4>自己紹介</h4>
                    <p><%= @user.pr%></p>
        </div>

            <br>
            
        <div class="area">
            <p><%= link_to 'プロフィール編集', edit_user_registration_path, class: "btn btn-block btn-outline-success" %></p>
        </div>
    <div class="scroll">
        <div class="card mb-3">
        <div class="card-body">
            <div class="field">
                <h6>いいねしている投稿</h6>
                <% @user.liked_tweets.each do |tweet| %>
                    <%= tweet.content %>
                    <%= tweet.user.user_name %>
                <% end %>
            </div>
        </div>
        </div>
    
<br>
<p><%= link_to "トップ戻る", tweets_path, class: "btn btn-block btn-outline-success" %></p>
    </div>