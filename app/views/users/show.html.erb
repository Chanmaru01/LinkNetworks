<h3>プロフィール</h3>
        <%# 画像挿入 %>
        <% if @user.image? %>
            <%= image_tag @user.image.url, class: "rounded-circle", :size =>'150x150' %>
        
        <% end %>

        <div class="box">
                <h4><%= @user.user_name %></h4>

                    <p><%= @user.email %></p>

                <h4>自己紹介</h4>
                    <div class="card mb-3">
                    <div class="card-body">
                    <p><%= @user.pr%></p>
                    </div>
                    </div>
        </div>
            <br>
        <div class="area">
            <p><%= link_to 'プロフィール編集', edit_user_registration_path, class: "btn btn-block btn-outline-success" %></p>
        </div>
    <%# スクロール機能 %>
    <div class="scroll">
        <div class="card mb-3">
        <div class="card-body">
            <div class="field">
                <h6>いいねしている投稿</h6>
                <% @user.liked_tweets.each do |tweet| %>
                    <%= tweet.content %>
                    <%= tweet.user.user_name %>
                <% end %>
            </div>
        </div>
        </div>
    
<br>
<p><%= link_to "トップ戻る", tweets_path, class: "btn btn-block btn-outline-success" %></p>
    </div>