<div class="title">プロフィール</div>

    <div class="box">
        <%# ユーザーネーム %>
            <div class="name"><h4><%= @user.user_name %></h4></div>
        <%# プロフィール編集右固定 %>
            <div class="edit">
                <%= link_to 'プロフィール編集', edit_user_registration_path, class: "btn btn-outline-success" %>
            </div>

        <div class="flex">
            <div class="left">
                <% if @user.image? %>
                    <%= image_tag @user.image.url, class: "rounded-circle", :size =>'180x180' %>
                <% else %>
                    <%# 画像指定がない場合デフォルト画像 %>
                    <%= image_tag 'default_profile_user_icon.png', class: "rounded-circle", :size =>'180x180' %>
                <% end %>
            </div>
        <%# <%= @user.email %>
        <br>
        <br>
            <div class="right">
                <div class="card mb-3"style="max-width: 1000px;">
                    <div class="card-body">
                        <div class="pr"><p>自己紹介</p></div>
                        <p><%= @user.pr%></p>
                    </div>
                </div>
            </div>
        </div>      
    </div>
<br>
<br>
    <div class="container">
        <div class="row">
            <div class="col">
                <h5>お気に入り投稿</h5>
            </div>
            <div class="col">
                <h5>投稿一覧</h5>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
    <%# お気に入りした投稿一覧 %>
        <div class="col-sm-6">
            <% @user.favorited_tweets.each do |tweet| %>
                <div class="card mb-3">
                    <div class="card-header text-right">
                        <details>
                            <summary></summary>
                                <div class="text-right">
                                <%= link_to '詳細', tweet_path(tweet), class: "btn btn-outline-success" %>
                                </div>
                                <%# 編集、削除ボタンの制御 %>
                                <% if user_signed_in? && tweet.user == current_user %>
                                    <div class="text-right">
                                        <%= link_to '編集', edit_tweet_path(tweet), class: "btn btn-outline-success" %>
                                        <%= link_to '削除', tweet, method: :delete, class: "btn btn-outline-danger" %>
                                    </div>
                                <% end %>
                        </details>
                    </div>
                <div class="card-body">
                    <h5 class="card-title"><%= tweet.user.user_name %></h5>
                    <p class="card-text"><% if tweet.image? %>
                                            <%= image_tag tweet.image.url, :size =>'320x380' %>
                                        <% end %></p>
                    <p class="card-text"><%= tweet.content %></p>
                    <% if user_signed_in? %>
                    <div class="btn-group" role="group">
                <%# いいね機能ボタン %>
                        <% if current_user.already_liked?(tweet) %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Un like', tweet_like_path(id: tweet.id, tweet_id: tweet.id), method: :delete %>
                            <%= tweet.likes.count %>
                        </div>
                        <% else %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Like', tweet_likes_path(id: tweet.id, tweet_id: tweet.id), method: :post %>
                            <%= tweet.likes.count %>
                        </div>
                        <% end %>
                <%# お気に入り機能ボタン %>
                        <% if current_user.already_favorited?(tweet) %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Un star', tweet_favorite_path(id: tweet.id, tweet_id: tweet.id), method: :delete %>
                            <%= tweet.favorites.count %>   
                        </div>            
                        <% else %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Star', tweet_favorites_path(id: tweet.id, tweet_id: tweet.id), method: :post %>
                            <%= tweet.favorites.count %>
                        </div>
                        <% end %>
                    </div>
                    <% end %>
                </div>
                </div>
            <% end %>
        </div>
    <%# 自分の投稿一覧 %>
    <div class="col-sm-6">
            <% @user.tweets.each do |tweet| %>
                <div class="card mb-3">
                    <div class="card-header bg-success px-6 py-0 text-right">
                    <%# dropdowe-menuがリンクに飛ばされた後、何らかの原因で使用できないので 代換えしている %>
                        <details>
                        <summary  class='fas fa-ellipsis-v pt-2 text-white'></summary>
                                    <ul class="mt-3 p-0 text-center">
                                            <li class="py-1"><%= link_to '詳細', tweet_path(tweet), class: "text-success" %></li>
                                        <%# 編集、削除ボタンの制御 %>
                                        <% if user_signed_in? && tweet.user == current_user %>
                                            <li class="py-1"><%= link_to '編集', edit_tweet_path(tweet), class: "text-success" %></li>
                                            <li class="py-1"><%= link_to '削除', tweet, method: :delete, class: "text-danger" %></li>
                                        <% end %>
                                    </ul>
                    </details>
                        
                    </div>
                <div class="card-body">
                        <% if tweet.image? %>
                            <%= image_tag tweet.image.url, class: "card-img-top" %>
                        <% end %>

                    <p class="card-text"><%= tweet.content %></p>
                    <% if user_signed_in? %>
                    <div class="btn-group text-left" role="group">
                <%# いいね機能ボタン %>
                        <% if current_user.already_liked?(tweet) %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Un like', tweet_like_path(id: tweet.id, tweet_id: tweet.id), method: :delete %>
                            <%= tweet.likes.count %>
                        </div>
                        <% else %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Like', tweet_likes_path(id: tweet.id, tweet_id: tweet.id), method: :post %>
                            <%= tweet.likes.count %>
                        </div>
                        <% end %>
                <%# お気に入り機能ボタン %>
                        <% if current_user.already_favorited?(tweet) %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Un star', tweet_favorite_path(id: tweet.id, tweet_id: tweet.id), method: :delete %>
                            <%= tweet.favorites.count %>   
                        </div>            
                        <% else %>
                        <div class="btn btn-outline-success">
                            <%= link_to 'Star', tweet_favorites_path(id: tweet.id, tweet_id: tweet.id), method: :post %>
                            <%= tweet.favorites.count %>
                        </div>
                        <% end %>
                    </div>
                    <% end %>
                </div>
                </div>
            <% end %>
            <%# Jqueryの動きを出すためのコード3種 %>
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>    
        </div>
    </div>
    <br>
    <p><%= link_to "トップに戻る", tweets_path, class: "btn btn-block btn-outline-success" %></p>