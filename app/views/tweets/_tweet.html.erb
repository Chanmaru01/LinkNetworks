<div class="card mb-3">
    <div class="card-body">
        <p class="card-text"><%= tweet.content %></p>
        <p class="card-text"><%= tweet.user.user_name %></p>
        <%= link_to '編集', edit_tweet_path(tweet), class: "btn btn-outline-primary" %>
        <%= link_to '削除', tweet, method: :delete, class: "btn btn-outline-danger" %>
    </div>
</div>