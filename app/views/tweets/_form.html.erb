<%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> このツイートの保存を禁止しました</h2>
      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%# 画像アップロード %>
  <div class="field form-group">
    <%= form.label "画像アップロード" %>
    <%= form.file_field :image %>
  </div>
<%# 投稿内容 %>
  <div class="field form-group">
    <%= form.label "投稿内容" %>
    <%= form.text_field :content, id: :tweet_content, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
