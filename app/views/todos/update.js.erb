<%# モーダルを閉じる処理 %>
$("#memoModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();

<%# Rails @status => true 画面の書き換え : false モーダルを再度表示 %>
<% if @status %>
$('[data-model_name="memo"]').filter('[data-id="<%= @memo.id %>"]').find(".todo-cards").html("<%= j(render partial: 'todos/todo', collection: @memo.todos, as: :todo) %>");

<% else %>
$("#modalArea").html("<%= j(render 'modal_form', memo: @memo, todo: @todo) %>")
$("#modalArea").find(".modal").modal('show')
<% end %>
